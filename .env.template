# Cognitive Memory System Configuration
# Copy this file to .env and modify values as needed

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_TIMEOUT=30
QDRANT_PREFER_GRPC=false

# SQLite Database Configuration
SQLITE_PATH=./data/cognitive_memory.db
DB_BACKUP_INTERVAL=24
DB_ENABLE_WAL=true

# Embedding Model Configuration
SENTENCE_BERT_MODEL=all-MiniLM-L6-v2
MODEL_CACHE_DIR=./data/models
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=auto

# Cognitive Processing Parameters
ACTIVATION_THRESHOLD=0.7
BRIDGE_DISCOVERY_K=5
MAX_ACTIVATIONS=50
CONSOLIDATION_THRESHOLD=100

# Multi-dimensional Weights
EMOTIONAL_WEIGHT=0.2
TEMPORAL_WEIGHT=0.15
CONTEXTUAL_WEIGHT=0.25
SOCIAL_WEIGHT=0.1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=
LOG_ROTATE_SIZE=10 MB
LOG_RETENTION=7 days

# System Configuration
DEBUG=false
MAX_MEMORY_USAGE_MB=1024
CLEANUP_INTERVAL_HOURS=24
